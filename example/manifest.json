{
  "name": "Copy Domain + Title",
  "version": "2.0",
  "manifest_version": 2,
  "description": "Lets you copy URL, Title, Title + URL of All Open Tabs or Current tabs in Text or HTML format using the right click menu.",
  "icons": { 
    "16": "img/icon16.png",       
    "32": "img/icon32.png",   
    "48": "img/icon48.png",   
    "128": "img/icon128.png"  
  },
  

    "browser_action": {
   "default_popup": "popup.html"
  }, 
  "permissions": [ 
    "contextMenus",
    "unlimitedStorage",
    "tabs",
    "http://*/*",
    "https://*/*",
    "clipboardRead",
    "clipboardWrite"    
  ]
  
}